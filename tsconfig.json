{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./src/",
    "noImplicitAny": true,
    "module": "esnext",
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@components/*": ["./src/component/*"],
      "@pages/*": ["./src/pages/*"],
      "@context/*": ["./src/context/*"],
      "@data/*": ["./src/data/*"],
      "@layout/*": ["./src/layout/*"],
      "@assets/*": ["./src/assets/*"],
      "@api/*": ["./src/api/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
